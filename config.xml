<?xml version='1.0' encoding='utf-8'?>
<widget id="com.theprimacy.thehartford.extramile" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ExtraMile</name>
    <description>
        An Apache Cordova application that wraps The Hartford Extra Mile website
    </description>
    <author email="scott.roberson@theprimacy.com" href="http://theprimacy.com">
        Scott Roberson and the Primacy team
    </author>
    <content src="index.html" />
    <icon src="icon.png"/>
    <icon src="www/res/icon/ios/Icon-Small-40.png" gap:platform="ios" width="40" height="40"/>
    <icon src="www/res/icon/ios/Icon-76.png" gap:platform="ios" width="76" height="76"/>
    <icon src="www/res/icon/ios/Icon-76@2x.png" gap:platform="ios" width="152" height="152"/>
    <icon src="www/res/icon/ios/Icon-Small-40@2x.png" gap:platform="ios" width="80" height="80"/>
    <plugin name="cordova-plugin-whitelist" spec="1.2.1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
